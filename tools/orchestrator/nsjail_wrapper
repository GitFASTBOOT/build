# Runs file_finder in nsjail
function rpath() {
  nsjail_wrapper build/make/tools/orchestrator/file_finder.sh $@
}

# Helper function to create nsjail
# Hardcoded for now
# In the future, build orchestrator should set the mountpoints
function nsjail_wrapper() {
 prebuilts/build-tools/linux-x86/bin/nsjail -Mo \
  --quiet --user 0 --group 99999 \
   -R /bin/ \
   -R /lib/ \
   -R /lib64/ \
   -R $ANDROID_BUILD_TOP \
   --cwd $ANDROID_BUILD_TOP \
   -- $@
}

