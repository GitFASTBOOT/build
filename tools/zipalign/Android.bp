// Zip alignment tool
//

cc_binary_host {
    name: "zipalign",

    srcs: [
        "ZipAlign.cpp",
        "ZipEntry.cpp",
        "ZipFile.cpp",
    ],

    cflags: ["-Wall", "-Werror"],

    static_libs: [
        "libutils",
        "libcutils",
        "liblog",
        "libzopfli",
        "libz",
    ],

    target: {
        windows: {
            host_ldlibs: ["-lpthread"],
            enabled: true,
        },
    },
}
