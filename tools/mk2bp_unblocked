#!/bin/bash

function get_build_var()
{
    build/soong/soong_ui.bash --dumpvar-mode $1
}

if [ ! -e build/make/tools/mk2bp_unblocked.py ] ; then
    echo "Must run mk2bp_unblocked from the root of the tree"
    exit 1
fi

export TARGET_DEVICE=$(get_build_var TARGET_DEVICE) \
PRODUCT_OUT=out/target/product/$TARGET_DEVICE

PYTHONDONTWRITEBYTECODE=1 \
    python3 build/make/tools/mk2bp_unblocked.py
